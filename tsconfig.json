{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@app/*": ["*"],
    },
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false
  },
  "include": ["src/**/*"],
}
